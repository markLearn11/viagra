.privacy-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-top: 20rpx;
}

.privacy-body {
  padding: 0 60rpx;
  overflow-y: auto;
}

.privacy-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  display: block;
}

.privacy-text:nth-child(2) {
  margin-top: 20rpx;
}

.privacy-list {
  margin: 30rpx 0;
  padding-left: 20rpx;
}

.privacy-item {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  display: block;
  margin-bottom: 15rpx;
}

.privacy-note {
  font-size: 26rpx;
  color: #999;
  line-height: 1.8;
  display: block;
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.privacy-footer {
  padding: 30rpx 60rpx 60rpx;
  display: flex;
  gap: 30rpx;
}

.privacy-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.privacy-btn-cancel {
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.privacy-btn-cancel:active {
  background-color: #ebebeb;
}

.privacy-btn-confirm {
  background-color: #000;
  color: #fff;
}

.privacy-btn-confirm:active {
  background-color: #1a1a1a;
}

.privacy-btn::after {
  border: none;
}