/**logs.wxss**/
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F3F0FF 0%, #F8F6FF 50%, #FCFBFF 100%);
  display: flex;
  flex-direction: column;
  padding-top: calc(88rpx + env(safe-area-inset-top) + 70rpx);
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #8B5CF6;
  padding-top: calc(env(safe-area-inset-top) + 20rpx);
}

.navbar-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 30rpx 40rpx 20rpx 40rpx;
  min-height: 88rpx;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  text-align: center;
  flex: 1;
}

.navbar-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.left-icon {
  margin-right: 20rpx;
}

.right-icon {
  margin-left: 20rpx;
}

.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.log-item {
  margin: 10rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}