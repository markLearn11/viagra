<!-- 顶部导航 -->
<view class="header">
  <view class="back-btn" bindtap="onBack">
    <text class="back-icon">‹</text>
  </view>
  <view class="header-title">今日疗愈计划</view>
  <view class="refresh-btn" bindtap="onRefresh">
  </view>
</view>

<view class="container">

  <!-- 计划标题和统计 -->
  <view class="plan-header">
    <view class="plan-title">今日所有计划<text class="practicesLength">（{{ parsedPlan.practices.length}}）</text></view>
    <view class="today-plan-btn" bindtap="onViewAllPlans">
      <image src="/static/images/calendar.svg" class="btn-icon-image" />
      <text class="btn-text">查看所有计划</text>
    </view>
  </view>

  <!-- 治疗计划内容 -->
  <view class="plan-content">
    <!-- 加载状态 -->
    <view wx:if="{{isLoading}}" class="loading-container">
      <view class="loading-spinner"></view>
      <text class="loading-text">正在获取今日任务...</text>
    </view>
    
    <!-- 今日任务显示 - 卡片式布局 -->
    <view wx:elif="{{parsedPlan && parsedPlan.practices}}" class="week-container">
      <view wx:for="{{parsedPlan.practices}}" wx:key="id" class="week-card">
        <view class="week-header" bindtap="toggleDay" data-index="{{index}}">
          <view class="day-info">
            <text class="day-title">{{item.title}}</text>
          </view>
          <view class="task-progress">
            <text class="progress-text">{{item.completedCount}}/{{item.totalCount}}</text>
          </view>
          <view class="expand-icon {{item.expanded ? 'expanded' : ''}}">
            <image src="/static/images/expande.svg" class="btn-icon-image" />
          </view>
        </view>
        <view class="week-desc">{{item.description}}</view>
        <view wx:if="{{item.expanded}}" class="day-content">
          <view wx:for="{{item.tasks}}" wx:for-item="task" wx:for-index="taskIndex" wx:key="id" class="task-item">
            <view class="task-main">
              <view class="task-check {{task.completed ? 'completed' : ''}}" bindtap="toggleTask" data-day-index="{{index}}" data-task-index="{{taskIndex}}">
                <text wx:if="{{task.completed}}">✓</text>
              </view>
              <text class="task-text {{task.completed ? 'completed' : ''}}">
                {{task.text}}
              </text>
            </view>
            <view class="task-meta" wx:if="{{task.date}}">
              <text class="task-date">日期: {{task.date}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 文本格式显示（备用） -->
    <view wx:elif="{{treatmentPlan}}" class="treatment-plan-display">
      <view class="text-plan">
        <text class="plan-text">{{treatmentPlan}}</text>
      </view>
    </view>
    
    <!-- 无任务状态 -->
    <view wx:else class="no-plan">
      <text class="no-plan-text">今日暂无疗愈任务</text>
      <view class="no-plan-tips">
        <text class="tips-text">请先创建治疗计划或点击刷新获取最新任务</text>
      </view>
    </view>
  </view>
</view>