.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: calc(188rpx + env(safe-area-inset-top) * 2);
    padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
    box-sizing: border-box;
    /* background: linear-gradient(180deg, #F8F4FF 0%, #F3F0FF 50%, #E9D5FF 100%); */
    background: linear-gradient(180deg, #f0f0ff 0%, #dadffe 100%);
    /* 移除 justify-content: center; 让内容从顶部开始排列 */
    justify-content: flex-start;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: env(safe-area-inset-top);
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #f8f6ff 0%, #f0f0ff 100%);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  min-height: 88rpx;
  padding-top: 80rpx;
  z-index: 1000;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}
.back-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 50%;
}

.back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: #333;
}

