/* login.wxss */
.login-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #F8F4FF 0%, #E9D5FF 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  background: rgba(139, 69, 255, 0.1);
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
  background: rgba(99, 102, 241, 0.1);
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 100rpx;
  background: rgba(168, 85, 247, 0.1);
}

/* 主要内容容器 */
.login-container {
  position: relative;
  z-index: 2;
  padding: 200rpx 60rpx 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  margin-bottom: 30rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #6366F1;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.5;
}

/* 登录区域 */
.login-section {
  margin-bottom: 80rpx;
}

/* 登录描述 */
.login-description {
  text-align: center;
  margin-bottom: 60rpx;
}

.description-text {
  display: block;
  font-size: 32rpx;
  color: #374151;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.description-subtitle {
  display: block;
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.5;
}

/* 微信登录按钮 */
.wechat-login-btn {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.3);
  margin-bottom: 50rpx;
}

.wechat-login-btn:active {
  background: linear-gradient(135deg, #06AD56 0%, #059748 100%);
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
}

.wechat-login-btn.loading {
  background: #D1D5DB;
  color: #9CA3AF;
  box-shadow: none;
}

.wechat-icon {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.login-text {
  font-size: 34rpx;
  font-weight: 600;
}

/* 登录提示 */
.login-tips {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.tip-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.tip-icon {
  font-size: 28rpx;
  color: #07C160;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.tip-text {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
}

/* 用户协议 */
.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #9CA3AF;
  line-height: 1.5;
}

.agreement-text {
  color: #9CA3AF;
}

.agreement-link {
  color: #6366F1;
  text-decoration: underline;
}

/* 底部装饰 */
.footer-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  z-index: 1;
}

.decoration-wave {
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 69, 255, 0.1) 100%);
  border-radius: 50% 50% 0 0;
  transform: scaleX(1.5);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .login-container {
    padding: 150rpx 40rpx 80rpx;
  }
  
  .logo-text {
    font-size: 42rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.login-section {
  animation: fadeInUp 0.6s ease-out;
}

.logo-section {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.wechat-login-btn {
  animation: fadeInScale 0.8s ease-out 0.4s both;
}

.login-tips {
  animation: fadeInUp 0.6s ease-out 0.6s both;
}