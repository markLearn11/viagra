<!--login.wxml-->
<view class="login-page">
  <!-- 顶部装饰 -->
  <view class="header-decoration">
    <view class="decoration-circle circle-1"></view>
    <view class="decoration-circle circle-2"></view>
    <view class="decoration-circle circle-3"></view>
  </view>

  <!-- 主要内容 -->
  <view class="login-container">
    <!-- Logo和标题 -->
    <view class="logo-section">
      <view class="logo">
        <text class="logo-text">栖溯心理</text>
      </view>
      <view class="subtitle">欢迎回来，开始你的心理健康之旅</view>
    </view>

    <!-- 微信登录区域 -->
    <view class="login-section">
      <view class="login-description">
        <text class="description-text">使用微信账号安全登录</text>
        <text class="description-subtitle">快速便捷，保护您的隐私</text>
      </view>
      
      <button class="wechat-login-btn {{loading ? 'loading' : ''}}" bindtap="wechatLogin" disabled="{{loading}}">
        <view class="wechat-icon">🔐</view>
        <text class="login-text">{{loading ? '登录中...' : '微信授权登录'}}</text>
      </button>
      
      <view class="login-tips">
        <view class="tip-item">
          <text class="tip-icon">✓</text>
          <text class="tip-text">安全可靠</text>
        </view>
        <view class="tip-item">
          <text class="tip-icon">✓</text>
          <text class="tip-text">快速登录</text>
        </view>
        <view class="tip-item">
          <text class="tip-icon">✓</text>
          <text class="tip-text">隐私保护</text>
        </view>
      </view>
    </view>

    <!-- 用户协议 -->
    <view class="agreement">
      <text class="agreement-text">登录即表示同意</text>
      <text class="agreement-link">《用户协议》</text>
      <text class="agreement-text">和</text>
      <text class="agreement-link">《隐私政策》</text>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="footer-decoration">
    <view class="decoration-wave"></view>
  </view>
</view>