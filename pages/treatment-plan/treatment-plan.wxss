.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: calc(188rpx + env(safe-area-inset-top) * 2);
    padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
    box-sizing: border-box;
    /* background: linear-gradient(180deg, #F8F4FF 0%, #F3F0FF 50%, #E9D5FF 100%); */
    background: linear-gradient(180deg, #f0f0ff 0%, #dadffe 100%);
    /* 移除 justify-content: center; 让内容从顶部开始排列 */
    justify-content: flex-start;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: env(safe-area-inset-top);
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #f8f6ff 0%, #f0f0ff 100%);
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 20rpx;
  min-height: 88rpx;
  padding-top: 80rpx;
  z-index: 1000;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.back-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  border-radius: 50%;
}

.back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  flex: 1;
}

.placeholder {
  width: 40rpx;
  height: 40rpx;
}

/* 计划标题区域 */
.plan-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 40rpx;
  width: 100vw;
  box-sizing: border-box;
}

.plan-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.today-plan-btn {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.today-plan-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #fff;
}

.btn-icon-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  vertical-align: middle;
}

.btn-text {
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 1rpx;
}

/* 计划内容区域 */
.plan-content {
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  width: 92vw;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}



.treatment-plan-text {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.plan-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.no-plan {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.no-plan-text {
  font-size: 28rpx;
  color: #999;
}

.week-container {
  padding: 24rpx 30rpx;
  margin: 0 auto;
}

.week-card {
  border-radius: 16rpx;
  overflow: hidden;
}

.week-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  cursor: pointer;
}
.week-desc{
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  color: #666;
}

.day-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 32rpx;
}

.day-title {
  font-weight: 600;
  color: #333;
}

.day-theme {
  color: #333;
  font-weight: 500;
}

.expand-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.expand-icon text {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.day-date {
  padding: 0 30rpx;
  display: flex;
}

.date-text {
  font-size: 24rpx;
  color: #8b7cf6;
  font-weight: 500;
}

.date-desc {
  font-size: 26rpx;
  color: #333;
  margin-left: 16rpx;
}

.day-content {
  padding: 24rpx 30rpx;
}

.task-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
}

.task-item:last-child {
  margin-bottom: 0;
}

.task-check {
  width: 30rpx;
  height: 30rpx;
  border: 2px solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.3s ease;
  background: linear-gradient(120deg, #38a8f3 0%, #49f39b 100%);

}

.task-check:hover {
  border-color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
}

.task-check.completed {
  background-color: #4ade80;
  border-color: #4ade80;
}

.task-check text {
  font-size: 20rpx;
  color: #4ade80;
  font-weight: bold;
}

.task-check.completed text {
  color: #ffffff;
}

.task-text.completed {
  text-decoration: line-through;
  color: #999;
}

.task-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  flex: 1;
}

.daily-practice {
  padding: 20rpx;
  background: #e0f2fe;
  border-radius: 12rpx;
  border-left: 4rpx solid #0ea5e9;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.practice-items {
  padding-left: 10rpx;
}

.practice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.practice-bullet {
  color: #0ea5e9;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.practice-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #555;
  flex: 1;
}

.text-plan {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #8b7cf6;
}

.plan-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}