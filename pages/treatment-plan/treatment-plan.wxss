.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8e5ff 0%, #f0f0ff 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: transparent;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.placeholder {
  width: 60rpx;
}

/* 计划标题区域 */
.plan-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 40rpx;
}

.plan-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.today-plan-btn {
  display: flex;
  align-items: center;
  background: #8b7cf6;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* 计划内容区域 */
.plan-content {
  padding: 0 30rpx;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 流式内容样式 */
.streaming-container {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.plan-text.streaming {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-word;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.treatment-plan-text {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.plan-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
}

.no-plan {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.no-plan-text {
  font-size: 28rpx;
  color: #999;
}

/* 卡片式治疗计划样式 */
.treatment-plan-display {
  margin-top: 20rpx;
}

.days-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.day-card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.day-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  background: #f8f9ff;
  border-bottom: 1rpx solid #e8e5ff;
  cursor: pointer;
}

.day-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.day-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.day-theme {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.expand-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #e8e5ff;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.expand-icon text {
  font-size: 24rpx;
  color: #8b7cf6;
  font-weight: bold;
}

.day-date {
  padding: 16rpx 30rpx;
  background: #f0f0ff;
  border-bottom: 1rpx solid #e8e5ff;
}

.date-text {
  font-size: 24rpx;
  color: #8b7cf6;
  font-weight: 500;
}

.date-desc {
  font-size: 26rpx;
  color: #666;
  margin-left: 16rpx;
}

.day-content {
  padding: 24rpx 30rpx;
}

.task-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 12rpx 0;
}

.task-item:last-child {
  margin-bottom: 0;
}

.task-check {
  width: 20px;
  height: 20px;
  border: 2px solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.3s ease;
}

.task-check:hover {
  border-color: #4CAF50;
  background-color: rgba(76, 175, 80, 0.1);
}

.task-check.completed {
  background-color: #4ade80;
  border-color: #4ade80;
}

.task-check text {
  font-size: 20rpx;
  color: #4ade80;
  font-weight: bold;
}

.task-check.completed text {
  color: #ffffff;
}

.task-text.completed {
  text-decoration: line-through;
  color: #999;
}

.task-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  flex: 1;
}

.daily-practice {
  padding: 20rpx;
  background: #e0f2fe;
  border-radius: 12rpx;
  border-left: 4rpx solid #0ea5e9;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.practice-items {
  padding-left: 10rpx;
}

.practice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.practice-bullet {
  color: #0ea5e9;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

.practice-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #555;
  flex: 1;
}

.text-plan {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #8b7cf6;
}

.plan-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

/* 流式显示样式 */
.streaming-plan-display {
  padding: 0 30rpx;
}

.streaming-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.streaming-dot {
  width: 12rpx;
  height: 12rpx;
  background: #8b7cf6;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: streaming-pulse 1.5s ease-in-out infinite;
}

.streaming-text {
  font-size: 26rpx;
  color: #8b7cf6;
  font-weight: 500;
}

@keyframes streaming-pulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

.days-container.streaming {
  opacity: 0;
  animation: streaming-fade-in 0.5s ease-out forwards;
}

@keyframes streaming-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.day-card.streaming-card {
  position: relative;
  overflow: hidden;
}

.day-card.streaming-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(139, 124, 246, 0.1), transparent);
  animation: streaming-shimmer 2s ease-in-out infinite;
}

@keyframes streaming-shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

.task-item.streaming-task {
  animation: streaming-task-appear 0.3s ease-out;
}

@keyframes streaming-task-appear {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.streaming-container {
  padding: 0 30rpx;
}

.plan-text.streaming {
  position: relative;
  animation: streaming-text-typing 0.5s ease-out;
}

@keyframes streaming-text-typing {
  from {
    max-height: 0;
    opacity: 0;
  }
  to {
    max-height: 1000rpx;
    opacity: 1;
  }
}

.plan-text.streaming::after {
  content: '|';
  animation: streaming-cursor 1s infinite;
  color: #8b7cf6;
  font-weight: bold;
}

@keyframes streaming-cursor {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0;
  }
}