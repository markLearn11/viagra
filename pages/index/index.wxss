/**index.wxss**/
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: calc(88rpx + env(safe-area-inset-top) + 150rpx);
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(180deg, #E9D5FF 0%, #DDD6FE 50%, #C084FC 100%);
}

/* 导航栏样式已移至组件中 */

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  padding-top: calc(60rpx + env(safe-area-inset-top));
  min-height: 120rpx;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.menu-icon, .qr-icon {
  font-size: 40rpx;
  color: #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  box-sizing: border-box;
}

/* 欢迎文案 */
.welcome-section {
  text-align: center;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.welcome-text {
  display: block;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  margin-bottom: 16rpx;
}

/* 操作按钮 */
.button-section {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  margin-bottom: 60rpx;
  flex-shrink: 0;
}

.btn-secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #E5E5E5;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  width: 200rpx;
}

.btn-primary::after {
  border: none;
}

.btn-secondary::after {
  border: none;
}

/* 底部区域 */
.bottom-section {
  padding: 30rpx 40rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  max-width: 750rpx;
  width: 100%;
  box-sizing: border-box;
  flex-shrink: 0;
}

/* 我的档案 */
.my-profile {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: fit-content;
}

.profile-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #10B981;
}

.profile-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 输入框 */
.input-section {
  margin-bottom: 20rpx;
}

.chat-input {
  width: calc(100% - 60rpx);
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 16rpx 36rpx;
  font-size: 26rpx;
  color: #333333;
  border: 1rpx solid #9c95f7;
  backdrop-filter: blur(15rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  text-align: left;
  min-height: 60rpx;
  margin: 0 auto;
  display: block;
}

.input-placeholder {
  color: rgba(139, 92, 246, 0.6);
  font-size: 26rpx;
  text-align: center;
}

.tip{
  color: #6B46C1;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-top: 16rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
  font-weight: 400;
  text-shadow: 1rpx 1rpx 0rpx rgba(255, 255, 255, 0.8), -1rpx -1rpx 0rpx rgba(255, 255, 255, 0.3);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.container view {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
}

/* 按钮容器 */
.button {
  display: flex;
  gap: 12rpx;
  justify-content: center;
  margin-top: 50rpx;
}

/* 按钮基础样式 */
.button view {
  padding: 16rpx 50rpx;
  font-size: 26rpx;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  font-weight: 400;
  min-width: 60rpx;
  text-align: center;
}

/* 稍后再说按钮 */
.talk {
  background-color: #ffffff;
  color: #333333;
  border: 2rpx solid #8b5cf6;
  margin-right: 40rpx;
}

/* 好的，开始按钮 */
.begin {
  background-color: #8b5cf6;
  color: #ffffff;
  border: 2rpx solid #8b5cf6;
}

/* 移除微信小程序按钮默认样式 */
.button button::after {
  border: none;
}

.card{
  display: flex;
  background-color: #ffffff;
  width: 200rpx;
  height: 58rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-left: 10rpx;
  align-items: center;
  justify-content: center;
}
.card image{
  width: 60rpx;
  height: 60rpx;
}

/* 底部容器 */
.bottom_container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 30rpx;
  z-index: 100;
}

/* 我的档案文字 */
.bottom_text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 8rpx;
  font-weight: 400;
}

.chat{
  margin-top: 20rpx;
}

/* 响应式设计 - 小屏幕适配 */
@media (max-width: 375px) {
  .header {
    padding: 15rpx 30rpx;
    min-height: 100rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .main-content {
    padding: 60rpx 30rpx 30rpx;
  }
  
  .welcome-title {
    font-size: 44rpx;
  }
  
  .welcome-subtitle {
    font-size: 26rpx;
  }
  
  .bottom-section {
    padding: 30rpx;
  }
}

/* 响应式设计 - 大屏幕适配 */
@media (min-width: 414px) {
  .page {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .main-content {
    padding: 100rpx 60rpx 60rpx;
  }
}