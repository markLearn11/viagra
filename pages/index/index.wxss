/**index.wxss**/
.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: calc(88rpx + env(safe-area-inset-top) + 100rpx);
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  /* background: linear-gradient(180deg, #F8F4FF 0%, #F3F0FF 50%, #E9D5FF 100%); */
  background: linear-gradient(180deg, #f0f0ff 0%, #dadffe 100%);
  justify-content: center;
}

/* 导航栏样式已移至组件中 */

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  padding-top: calc(60rpx + env(safe-area-inset-top));
  min-height: 120rpx;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.menu-icon, .qr-icon {
  font-size: 40rpx;
  color: #333;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  box-sizing: border-box;
}

/* 欢迎文案 */
.welcome-section {
  text-align: center;
  margin-bottom: 40rpx;
  flex-shrink: 0;
  position: relative;
  min-height: 60vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx 0;
}

.welcome-text {
  display: block;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  margin-bottom: 8rpx;
}

/* 操作按钮 */
.button-section {
  display: flex;
  gap: 24rpx;
  justify-content: center;
  margin-bottom: 60rpx;
  flex-shrink: 0;
}

.btn-secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #E5E5E5;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  width: 200rpx;
}

.btn-primary::after {
  border: none;
}

.btn-secondary::after {
  border: none;
}

/* 底部区域 */
.bottom-section {
  padding: 30rpx 40rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  max-width: 750rpx;
  width: 100%;
  box-sizing: border-box;
  flex-shrink: 0;
}

/* 我的档案 */
.my-profile {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  width: fit-content;
}

.profile-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #10B981;
}

.profile-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

/* 输入框 */
.input-section {
  margin-bottom: 20rpx;
}

.chat-input {
  width: calc(100% - 60rpx);
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 16rpx 36rpx;
  font-size: 26rpx;
  color: #333333;
  border: 1rpx solid #9c95f7;
  backdrop-filter: blur(15rpx);
  /* box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); */
  text-align: left;
  min-height: 60rpx;
  margin: 0 auto;
  display: block;
}

.input-placeholder {
  color: #9c95f7;
  font-size: 26rpx;
  text-align: center;
}

.tip{
  color: #6B46C1;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-top: 16rpx;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
  font-weight: 400;
  text-shadow: 1rpx 1rpx 0rpx rgba(255, 255, 255, 0.8), -1rpx -1rpx 0rpx rgba(255, 255, 255, 0.3);
  opacity: 0.8;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0 0;
  box-sizing: border-box;
}

.container view {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
}

/* 按钮容器 */
.button {
  display: flex;
  gap: 12rpx;
  justify-content: center;
  margin-top: 20rpx;
}

/* 按钮基础样式 */
.button view {
  padding: 16rpx 50rpx;
  font-size: 26rpx;
  border-radius: 16rpx;
  font-weight: 400;
  min-width: 60rpx;
  text-align: center;
}

/* 稍后再说按钮 */
.talk {
  background-color: #ffffff;
  color: #333333;
  border: 2rpx solid #9c95f7;
  margin-right: 40rpx;
}

/* 好的，开始按钮 */
.begin {
  background-color: #7d6fff;
  color: #ffffff;
  border: 2rpx solid #8b5cf6;
}

/* 移除微信小程序按钮默认样式 */
.button button::after {
  border: none;
}

.card{
  display: flex;
  background-color: #ffffff;
  width: 200rpx;
  height: 58rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-left: 10rpx;
  align-items: center;
  justify-content: center;
}
.card image{
  width: 60rpx;
  height: 60rpx;
}

/* 底部容器 */
.bottom_container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 30rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.1);
}

/* 我的档案文字 */
.bottom_text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 8rpx;
  font-weight: 400;
}

.chat{
  margin-top: 20rpx;
}

/* 响应式设计 - 小屏幕适配 */
@media (max-width: 375px) {
  .header {
    padding: 15rpx 30rpx;
    min-height: 100rpx;
  }
  
  .header-title {
    font-size: 32rpx;
  }
  
  .main-content {
    padding: 60rpx 30rpx 30rpx;
  }
  
  .welcome-title {
    font-size: 44rpx;
  }
  
  .welcome-subtitle {
    font-size: 26rpx;
  }
  
  .bottom-section {
    padding: 30rpx;
  }
}

/* 个性化欢迎界面样式 */
.personalized-welcome {
  text-align: center;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  margin: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.personalized-welcome .welcome-text {
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  text-align: center;
}

.personalized-welcome .guide-text {
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
  margin-bottom: 6rpx;
  text-align: center;
}

.example-text {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #888;
  margin-top: 32rpx;
  padding: 20rpx 30rpx;
  background: rgba(139, 92, 246, 0.08);
  border-radius: 20rpx;
  border-left: 4rpx solid #8B5CF6;
  text-align: center;
  max-width: 500rpx;
  margin-left: auto;
  margin-right: auto;
}

/* 发送消息后的跟进文本样式 */
.follow-up-text {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
}

/* 问题列表样式 */
.question-list {
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid #E5E7EB;
}

.question-item {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #333;
  margin-bottom: 12rpx;
  text-align: left;
  padding-left: 8rpx;
}

.question-note {
  font-size: 22rpx;
  line-height: 32rpx;
  color: #888;
  margin-top: 8rpx;
  text-align: center;
  font-style: italic;
}

/* 多步骤流程样式 */
.step-title {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-bottom: 12rpx;
  text-align: center;
  font-weight: 500;
}

.step-subtitle {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

/* 快捷选择按钮样式 */
.quick-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 32rpx;
  justify-content: center;
}

/* 多选提示样式 */
.multi-select-hint {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 20rpx;
  padding: 12rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
  border: 1rpx solid #E5E7EB;
}

/* AI推荐提示样式 */
.ai-suggestion-hint {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #E0E7FF 0%, #C7D2FE 100%);
  border: 1rpx solid #A5B4FC;
  border-radius: 16rpx;
  text-align: center;
}

.hint-text {
  font-size: 22rpx;
  color: #4338CA;
  line-height: 1.4;
}

.quick-btn {
  padding: 16rpx 24rpx;
  background: #F3F4F6;
  border: 1rpx solid #D1D5DB;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #374151;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.quick-btn:active {
  background: #8B5CF6;
  color: white;
  border-color: #8B5CF6;
}

/* 选中状态样式 */
.quick-btn.selected {
  background: #8B5CF6;
  color: white;
  border-color: #8B5CF6;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

/* 选中图标样式 */
.check-icon {
  font-size: 20rpx;
  font-weight: bold;
}

.quick-btn.other-option {
  background: #FEF3C7;
  border-color: #F59E0B;
  color: #92400E;
}

.quick-btn.other-option:active {
  background: #F59E0B;
  color: white;
  border-color: #F59E0B;
}

/* 确认选择按钮样式 */
.confirm-selection-btn {
  width: 100%;
  margin-top: 24rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.confirm-selection-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.4);
}

/* 选择按钮样式 */
.choice-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 32rpx;
}

.choice-btn {
  padding: 20rpx 32rpx;
  background: #F8FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #334155;
  text-align: center;
  transition: all 0.3s ease;
}

.choice-btn:active {
  background: #8B5CF6;
  color: white;
  border-color: #8B5CF6;
}

/* 总结加载状态样式 */
.summary-loading {
  margin: 24rpx 0;
  padding: 40rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid #E5E7EB;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #6B7280;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
  }
  50% {
    opacity: 1;
  }
}

/* 总结内容样式 */
.summary-content {
  margin: 24rpx 0;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid #E5E7EB;
  text-align: left;
}

.summary-item {
  margin-bottom: 16rpx;
  line-height: 32rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
  display: inline-block;
  min-width: 120rpx;
}

.summary-text {
  font-size: 24rpx;
  color: #374151;
  word-wrap: break-word;
}

/* 第6步目标设定样式 */
.analysis-text {
  font-size: 28rpx;
  color: #374151;
  text-align: center;
  margin: 16rpx 0;
  line-height: 40rpx;
}

.analysis-dots {
  font-size: 32rpx;
  color: #9CA3AF;
  text-align: center;
  margin: 24rpx 0;
  letter-spacing: 8rpx;
}

.analysis-note {
  font-size: 22rpx;
  color: #9CA3AF;
  text-align: center;
  margin-bottom: 32rpx;
}

.goal-question {
  margin: 32rpx 0;
  text-align: center;
}

.goal-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.goal-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.goal-btn {
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.goal-btn.primary {
  background: #8B5CF6;
  color: white;
  font-weight: 500;
}

.goal-btn.primary:active {
  background: #7C3AED;
  transform: scale(0.98);
}

.goal-btn.secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #374151;
  border-color: #E5E7EB;
}

.goal-btn.secondary:active {
  background: #F3F4F6;
  border-color: #D1D5DB;
  transform: scale(0.98);
}

/* AI分析结果样式 */
.ai-analysis-content {
  margin: 24rpx 0;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid #E5E7EB;
  backdrop-filter: blur(10rpx);
}

.analysis-result {
  font-size: 26rpx;
  color: #374151;
  line-height: 40rpx;
  display: block;
  white-space: pre-wrap;
}

/* 加载状态样式 */
.analysis-loading {
  margin: 24rpx 0;
  text-align: center;
}

.analysis-loading .analysis-dots {
  font-size: 26rpx;
  color: #8B5CF6;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 聊天消息区域样式 */
.chat-messages {
  flex: 1;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  overflow-y: auto;
  max-height: calc(100vh - 400rpx);
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.message {
  max-width: 80%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
}

.user-message {
  align-self: flex-end;
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  color: #fff;
  border-bottom-right-radius: 8rpx;
}

.ai-message {
  align-self: flex-start;
  background: rgba(255, 255, 255, 0.95);
  color: #333;
  border: 1rpx solid #E5E7EB;
  border-bottom-left-radius: 8rpx;
  backdrop-filter: blur(10rpx);
}

.message-content {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 20rpx;
  opacity: 0.7;
  text-align: right;
}

.ai-message .message-time {
  text-align: left;
}

/* 加载状态样式 */
.loading {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.loading-dots {
  display: flex;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #8B5CF6;
  animation: loading 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 聊天输入容器样式 */
.chat-input-container {
  margin-top: 20rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 0 20rpx;
  margin-bottom: 16rpx;
  justify-content: center;
}

.chat-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  border: 1rpx solid #9c95f7;
  backdrop-filter: blur(15rpx);
  min-height: 60rpx;
  text-align: center;
  max-width: 600rpx;
}

.chat-input[disabled] {
  background: rgba(229, 231, 235, 0.8);
  color: #9CA3AF;
  border: 1rpx solid #D1D5DB;
}

.send-btn {
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  color: #fff;
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  min-width: 100rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn[disabled],
.send-btn.disabled {
  background: #E5E7EB;
  color: #9CA3AF;
  box-shadow: none;
  cursor: not-allowed;
}

.send-btn.sending {
  background: #9CA3AF;
  color: #fff;
  box-shadow: none;
  cursor: not-allowed;
  opacity: 0.8;
}

/* 功能按钮区域 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 0 20rpx;
}

.action-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #6B46C1;
  border: 1rpx solid #E5E7EB;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.action-btn:active {
  background: rgba(139, 92, 246, 0.1);
}

/* 用户输入预览区域样式 */
.user-input-preview {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.preview-message {
  max-width: 90%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.preview-message.user-message {
  margin-left: auto;
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  color: #fff;
  border-bottom-right-radius: 8rpx;
}

.preview-message.ai-message {
  margin-right: auto;
  background: rgba(255, 255, 255, 0.95);
  color: #333;
  border: 1rpx solid #E5E7EB;
  border-bottom-left-radius: 8rpx;
  backdrop-filter: blur(10rpx);
}

.preview-message .message-content {
  font-size: 26rpx;
  line-height: 36rpx;
}

/* 响应式设计 - 大屏幕适配 */
@media (min-width: 414px) {
  .page {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .main-content {
    padding: 100rpx 60rpx 60rpx;
  }
}

/* 第八步治疗计划命名样式 */
.step8-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.step8-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
