/* components/drawer/drawer.wxss */

.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  animation: fadeIn 0.3s ease-in-out;
}

.drawer-container {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 600rpx;
  background: linear-gradient(180deg, #F8F4FF 0%, #F3F0FF 50%, #E9D5FF 100%);
  box-shadow: 2rpx 0 20rpx rgba(0, 0, 0, 0.1);
  animation: slideInLeft 0.3s ease-in-out;
  display: flex;
  flex-direction: column;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: calc(env(safe-area-inset-top) + 40rpx) 40rpx 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.drawer-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  font-size: 40rpx;
  color: #666;
  transition: all 0.2s ease;
}

.drawer-close:active {
  background-color: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.drawer-content {
  flex: 1;
  padding: 40rpx 0;
}

.drawer-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  margin: 0 20rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.drawer-item:active {
  background-color: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.item-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.item-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInLeft {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes slideOutLeft {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

.drawer-container.closing {
  animation: slideOutLeft 0.3s ease-in-out;
}

.drawer-mask.closing {
  animation: fadeOut 0.3s ease-in-out;
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}