/* components/drawer/drawer.wxss */

.drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  animation: fadeIn 0.3s ease-in-out;
}

.drawer-container {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 90%;
  background-color: #fff;
  /* background: linear-gradient(180deg, #F8F4FF 0%, #F3F0FF 50%, #E9D5FF 100%); */
  /* box-shadow: 2rpx 0 20rpx rgba(0, 0, 0, 0.1); */
  animation: slideInLeft 0.3s ease-in-out;
  display: flex;
  flex-direction: column;
}

.drawer-content{
  height: calc(100% - 200rpx);
  overflow: auto;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: calc(env(safe-area-inset-top) + 40rpx) 30rpx 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  margin-top: 40rpx;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.drawer-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  font-size: 40rpx;
  color: #666;
  transition: all 0.2s ease;
}

.drawer-close:active {
  background-color: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}


.drawer-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 40rpx;
  margin: 0 20rpx;
  transition: all 0.2s ease;
  border-bottom: 2rpx solid #f8f8f8;
}

.drawer-item:active {
  background-color: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}



.drawer-item-title{
  display: flex;
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  gap: 14rpx;
  white-space: nowrap;
}

.drawer-item-title .title{
  margin-left: 14rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.drawer-item-title .relationship{
  background-color:#f3f0ff;
  color: #7d6fff;
  border: 1rpx solid #7d6fff;
  border-radius: 30rpx;
  white-space: nowrap;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  width: fit-content;
  padding: 0 20rpx;
  margin-left: auto;
}

.drawer-item-detail{
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}

.drawer-item-progress {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: white;
  margin-right: 20rpx;
  white-space: nowrap;
}

/* 进行中状态 - 随机背景色 */
.drawer-item-progress[data-status="进行中"] {
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57, #ff9ff3);
  background-size: 400% 400%;
  animation: gradientShift 3s ease infinite;
}

/* 已结束状态 - 灰色背景 */
.drawer-item-progress[data-status="已结束"] {
  background-color: #bebebe;
}

.drawer-item-date{
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.drawer-item-date text{
  color: #bebebe;
  font-size: 24rpx;
}

.drawer-item-delete{
  width: 40rpx;
  height: 40rpx;
  margin-left: auto;
  cursor: pointer;
  opacity: 0;
  transform: translateX(100%);
  transition: all 0.3s ease;
}

.drawer-item-delete.show {
  opacity: 1;
  transform: translateX(0);
}

.drawer-item-delete:hover {
  transform: translateX(0) scale(1.1);
}

.drawer-item-delete image{
  width: 100%;
  height: 100%;
}
@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.item-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInLeft {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes slideOutLeft {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

.drawer-container.closing {
  animation: slideOutLeft 0.3s ease-in-out;
}

.drawer-mask.closing {
  animation: fadeOut 0.3s ease-in-out;
}

@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}