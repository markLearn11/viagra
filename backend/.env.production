# 生产环境配置模板
# 复制此文件为 .env 并填入实际值

# 数据库配置
DATABASE_URL=postgresql://xinli_user:YOUR_DB_PASSWORD@localhost/xinli_db

# 微信小程序配置
WECHAT_APPID=YOUR_WECHAT_APPID
WECHAT_SECRET=YOUR_WECHAT_SECRET

# DeepSeek AI 配置
DEEPSEEK_API_KEY=YOUR_DEEPSEEK_API_KEY
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# JWT 配置
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_HERE

# 服务配置
DEBUG=false
LOG_LEVEL=INFO

# 域名配置
ALLOWED_HOSTS=["sisuinfo.top", "www.sisuinfo.top", "localhost", "127.0.0.1","121.196.244.75"]

# Redis 配置（如果使用）
REDIS_URL=redis://localhost:6379/0

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=/opt/xinli-backend/uploads

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# 监控配置
SENTRY_DSN=  # Sentry 错误追踪（可选）

# 性能配置
WORKERS=2  # Uvicorn worker 进程数
MAX_REQUESTS=1000  # 每个 worker 处理的最大请求数
TIMEOUT=30  # 请求超时时间（秒）

# 安全配置
CORS_ORIGINS=["https://sisuinfo.top", "https://www.sisuinfo.top"]
TRUSTED_HOSTS=["sisuinfo.top", "www.sisuinfo.top"]

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/opt/xinli-backend/backups