/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用样式 */
.btn {
  background-color: #1aad19;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  margin: 20rpx;
  border: none;
}

.btn:active {
  background-color: #179b16;
}

.text-center {
  text-align: center;
}

.margin-top {
  margin-top: 40rpx;
}